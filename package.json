{
  "name": "guanqi-toolkit",
  "displayName": "观企工具箱",
  "description": "观企科技 VS Code 工具箱，提供目录结构管理、注释显示等功能，支持 uniapp 项目的页面标题显示",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "guanqi-toolkit.initConfig",
        "title": "%guanqi-toolkit.initConfig.title%"
      },
      {
        "command": "guanqi-toolkit.refresh",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "guanqi-toolkit.newFile",
        "title": "新建文件",
        "icon": "$(new-file)"
      },
      {
        "command": "guanqi-toolkit.newFolder",
        "title": "新建文件夹",
        "icon": "$(new-folder)"
      },
      {
        "command": "guanqi-toolkit.revealInFinder",
        "title": "在 Finder 中显示",
        "icon": "$(folder-opened)"
      },
      {
        "command": "guanqi-toolkit.openInIntegratedTerminal",
        "title": "在集成终端中打开",
        "icon": "$(terminal)"
      },
      {
        "command": "guanqi-toolkit.findInFolder",
        "title": "在文件夹中查找...",
        "icon": "$(search)"
      },
      {
        "command": "guanqi-toolkit.copyPath",
        "title": "复制路径"
      },
      {
        "command": "guanqi-toolkit.copyRelativePath",
        "title": "复制相对路径"
      },
      {
        "command": "guanqi-toolkit.rename",
        "title": "重命名...",
        "icon": "$(edit)"
      },
      {
        "command": "guanqi-toolkit.delete",
        "title": "删除",
        "icon": "$(trash)"
      },
      {
        "command": "guanqi-toolkit.cut",
        "title": "剪切",
        "icon": "$(cut)"
      },
      {
        "command": "guanqi-toolkit.copy",
        "title": "复制",
        "icon": "$(copy)"
      },
      {
        "command": "guanqi-toolkit.paste",
        "title": "粘贴",
        "icon": "$(paste)"
      },
      {
        "command": "guanqi-toolkit.generateComments",
        "title": "生成目录注释",
        "icon": "$(comment)"
      },
      {
        "command": "guanqi-toolkit.openSettings",
        "title": "打开设置",
        "icon": "$(gear)"
      },
      {
        "command": "guanqi-toolkit.openGithub",
        "title": "访问 GitHub",
        "icon": "$(github)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "catalog-explorer",
          "title": "观企工具箱",
          "icon": "$(file-directory)"
        }
      ]
    },
    "views": {
      "catalog-explorer": [
        {
          "id": "directoryExplorer",
          "name": "",
          "type": "tree",
          "visibility": "visible"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "directoryExplorer",
        "contents": "没有找到目录配置文件。\n[初始化配置](command:guanqi-toolkit.initConfig)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "guanqi-toolkit.newFile",
          "when": "view == directoryExplorer",
          "group": "navigation@1"
        },
        {
          "command": "guanqi-toolkit.newFolder",
          "when": "view == directoryExplorer",
          "group": "navigation@2"
        },
        {
          "command": "guanqi-toolkit.refresh",
          "when": "view == directoryExplorer",
          "group": "navigation@3"
        },
        {
          "command": "guanqi-toolkit.openSettings",
          "when": "view == directoryExplorer",
          "group": "navigation@4"
        },
        {
          "command": "guanqi-toolkit.openGithub",
          "when": "view == directoryExplorer",
          "group": "navigation@5"
        }
      ],
      "view/item/context": [
        {
          "command": "guanqi-toolkit.newFile",
          "when": "view == directoryExplorer && viewItem == directory",
          "group": "1_modification"
        },
        {
          "command": "guanqi-toolkit.newFolder",
          "when": "view == directoryExplorer && viewItem == directory",
          "group": "1_modification"
        },
        {
          "command": "guanqi-toolkit.rename",
          "when": "view == directoryExplorer",
          "group": "2_modification"
        },
        {
          "command": "guanqi-toolkit.delete",
          "when": "view == directoryExplorer",
          "group": "2_modification"
        },
        {
          "command": "guanqi-toolkit.findInFolder",
          "when": "view == directoryExplorer && viewItem == directory",
          "group": "3_search"
        },
        {
          "command": "guanqi-toolkit.revealInFinder",
          "when": "view == directoryExplorer",
          "group": "4_navigation"
        },
        {
          "command": "guanqi-toolkit.openInIntegratedTerminal",
          "when": "view == directoryExplorer && viewItem == directory",
          "group": "4_navigation"
        },
        {
          "command": "guanqi-toolkit.copyPath",
          "when": "view == directoryExplorer",
          "group": "5_cutcopypaste"
        },
        {
          "command": "guanqi-toolkit.copyRelativePath",
          "when": "view == directoryExplorer",
          "group": "5_cutcopypaste"
        },
        {
          "command": "guanqi-toolkit.cut",
          "when": "view == directoryExplorer",
          "group": "5_cutcopypaste@1"
        },
        {
          "command": "guanqi-toolkit.copy",
          "when": "view == directoryExplorer",
          "group": "5_cutcopypaste@2"
        },
        {
          "command": "guanqi-toolkit.paste",
          "when": "view == directoryExplorer && viewItem == directory",
          "group": "5_cutcopypaste@3"
        },
        {
          "command": "guanqi-toolkit.generateComments",
          "when": "view == directoryExplorer && viewItem == directory",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "Guanqi Toolkit",
      "properties": {
        "guanqi-toolkit.excludePatterns": {
          "type": "array",
          "default": [
            "node_modules",
            ".git",
            ".DS_Store",
            "dist",
            "build"
          ],
          "description": "要排除的文件夹或文件模式"
        },
        "guanqi-toolkit.showHiddenFiles": {
          "type": "boolean",
          "default": false,
          "description": "是否显示隐藏文件"
        },
        "guanqi-toolkit.sortOrder": {
          "type": "string",
          "enum": [
            "default",
            "type",
            "name",
            "size",
            "date"
          ],
          "default": "type",
          "description": "文件排序方式，默认按类型排序"
        },
        "guanqi-toolkit.showFileIcons": {
          "type": "boolean",
          "default": true,
          "description": "是否显示文件图标"
        },
        "guanqi-toolkit.showComments": {
          "type": "boolean",
          "default": true,
          "description": "是否显示文件/文件夹注释"
        },
        "guanqi-toolkit.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "是否自动刷新目录树"
        },
        "guanqi-toolkit.commentPosition": {
          "type": "string",
          "enum": [
            "tooltip",
            "inline",
            "both"
          ],
          "default": "both",
          "description": "注释显示位置"
        },
        "guanqi-toolkit.ai.enable": {
          "type": "boolean",
          "default": false,
          "description": "是否启用 AI 注释"
        },
        "guanqi-toolkit.ai.provider": {
          "type": "string",
          "enum": ["zhipu"],
          "default": "zhipu",
          "description": "AI 服务提供商"
        },
        "guanqi-toolkit.ai.apiKey": {
          "type": "string",
          "default": "",
          "description": "AI 服务 API 密钥"
        },
        "guanqi-toolkit.ai.showLogs": {
          "type": "boolean",
          "default": false,
          "description": "是否显示 AI 调用日志"
        },
        "guanqi-toolkit.about": {
          "type": "object",
          "default": {
            "author": "GQ-Y",
            "email": "i1959595510@qq.com",
            "github": "https://github.com/GQ-Y",
            "description": "如有问题或建议，欢迎通过 GitHub 反馈"
          },
          "markdownDescription": "### 关于作者\n\n**作者:** GQ-Y\n\n**邮箱:** i1959595510@qq.com\n\n**GitHub:** [GQ-Y](https://github.com/GQ-Y)\n\n如有问题或建议，欢迎通过 GitHub 反馈",
          "properties": {
            "author": {
              "type": "string",
              "description": "作者",
              "readOnly": true
            },
            "email": {
              "type": "string",
              "description": "邮箱",
              "readOnly": true
            },
            "github": {
              "type": "string",
              "description": "GitHub",
              "readOnly": true
            },
            "description": {
              "type": "string",
              "description": "说明",
              "readOnly": true
            }
          }
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "eslint": "^9.13.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "publisher": "GQ",
  "repository": {
    "type": "git",
    "url": "https://github.com/GQ-Y/guanqi-toolkit.git"
  },
  "icon": "images/icon.png",
  "license": "MIT",
  "keywords": [
    "guanqi",
    "toolkit",
    "directory",
    "annotation",
    "uniapp",
    "file-explorer"
  ],
  "author": {
    "name": "GQ-Y",
    "email": "i1959595510@qq.com",
    "url": "https://github.com/GQ-Y"
  },
  "bugs": {
    "url": "https://github.com/GQ-Y/guanqi-toolkit/issues",
    "email": "i1959595510@qq.com"
  }
}
